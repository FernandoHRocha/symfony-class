{% extends 'base.html.twig' %}

{% block title %}Nossas Receitas{% endblock %}

{% block body %}
    <div class="row align-items-center g-lg-5 py-5">
        <h1 class="text-warning">Nossa Receitas!</h1>
        <table class="table table-responsive table-stripped table-hover table-bordered">
            <thead>
                <tr>
                    <th class="text-end">Preço</th>
                    <th>Nome</th>
                    <th>Imagem</th>
                    <th>Descrição</th>
                </tr>
            </thead>
            <tbody>
                {% for recipe in recipes %}
                <tr>
                    <td class="text-end">R$ {{recipe.price}}</td>
                    <td>
                        <a href={{path('show_recipe', {id: recipe.id})}}>
                            {{recipe.name}}
                        </a>
                    </td>
                    <td>
                        <img height="40px" src="{{ asset('thumbnails/' ~ (recipe.thumbnail ?? 'default.jpg'))}}" alt="">
                    </td>
                    <td>{{recipe.description}}</td>
                </tr>
                {% endfor %}
            </tbody>
            <tfoot>
            </tfoot>
        </table>
    </div>
    {% include '/share/contribution.html.twig' %}
{% endblock %}
